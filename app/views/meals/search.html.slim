- content_for :css do
    = stylesheet_link_tag 'meals/search'
- content_for :javascript_includes do 
    = javascript_include_tag 'meals/updateNutritionScore'
    
#main 
    h1.main-title-2 フードのカロリーチャート、栄養成分表
    .block-4
        div.col-1 
            = search_form_for @q, class: "form", url: search_result_meals_path, method: :post, remote: true do |f|
                div.block-1
                    h3.secondary-title 検索 フードデータベース 名前別：
                    p.fields
                        = f.label :name_cont, '食事名'
                        = f.search_field :name_cont, class: 'text'
                        = f.submit '検索', class: 'button'
                .block-4 
                    div.col-1
                        h4.secondary-title 一致するフード：
                        div.col-2
            ul#matching
            
        div.col-2
            div#nutrition_facts
                h2.nutrition-facts 栄養成分表
                h2.food-description
                = form_with id: "nutrition-facts-form", class: "form" do |f|
                    ol.fieldset 
                        li.field
                            = f.label :分量
                            = f.text_field :count, id: "meal_entry_quantity" 
                div#nutrition_info
                    table#nutrition-facts
                        colgroup 
                            col.col-1
                            col.col-2
                            col.col-1
                            col.col-2
                        tbody
                            tr 
                                td.col-1 カロリー
                                td.col-2 kcal
                                td.col-1 ナトリウム
                                td.col-2 mg
                            tr 
                                td.col-1 脂肪合計
                                td.col-2 g
                                td.col-1 カリウム
                                td.col-2 mg
                            tr 
                                td.col-1 炭水化物合計
                                td.col-2 g
                                td.col-1 食物繊維
